@model BowlingTournament_Project.Models.Team
@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this team?</h4>
    <p class="mb-0">This action cannot be undone and will also delete all players associated with this team.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>Team Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Team Name:</dt>
            <dd class="col-sm-9">@Model.TeamName</dd>

            <dt class="col-sm-3">Division:</dt>
            <dd class="col-sm-9">@Model.Division.DivisionName</dd>

            <dt class="col-sm-3">Players:</dt>
            <dd class="col-sm-9">@Model.Players.Count</dd>

            <dt class="col-sm-3">Payment Status:</dt>
            <dd class="col-sm-9">
                @if (Model.RegistrationPaid)
                {
                    <span class="badge bg-success">Paid on @Model.PaymentDate?.ToString("MMM dd, yyyy")</span>
                }
                else
                {
                    <span class="badge bg-warning">Unpaid</span>
                }
            </dd>
        </dl>

        @if (Model.Players.Any())
        {
            <h6>Players to be deleted:</h6>
            <ul>
                @foreach (var player in Model.Players)
                {
                    <li>@player.PlayerName</li>
                }
            </ul>
        }
    </div>
</div>

<form asp-action="DeleteTeamConfirmed" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.TeamId" />
    <button type="submit" class="btn btn-danger">Delete Team</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>