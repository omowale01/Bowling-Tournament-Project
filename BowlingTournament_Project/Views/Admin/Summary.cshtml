@model BowlingTournament_Project.ViewModels.AdminSummaryVm
@{
    ViewData["Title"] = "Registration Summary";
}

<h1>Registration Summary</h1>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Total Teams</h5>
                <h2 class="card-text">@Model.TotalTeams</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Paid Teams</h5>
                <h2 class="card-text">@Model.PaidTeams</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Total Fees Collected</h5>
                <h2 class="card-text">@Model.TotalFees.ToString("C")</h2>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to Teams</a>
</div>