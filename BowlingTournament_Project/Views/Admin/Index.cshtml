@model BowlingTournament_Project.ViewModels.AdminIndexVm
@{
    ViewData["Title"] = "Admin - Teams Management";
}

<h1>Teams Management</h1>

<div class="card mb-4">
    <div class="card-header">
        <h5>Filter Teams</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="division" class="form-label">Division</label>
                <select name="division" class="form-select">
                    <option value="">All Divisions</option>
                    @foreach (var division in Model.Divisions)
                    {
                        <option value="@division.DivisionId"
                                selected="@(Model.SelectedDivision == division.DivisionId.ToString() ? "selected" : null)">
                            @division.DivisionName
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="paid" class="form-label">Payment Status</label>
                <select name="paid" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="true"
                            selected="@(Model.PaidFilter == true ? "selected" : null)">
                        Paid
                    </option>
                    <option value="false"
                            selected="@(Model.PaidFilter == false ? "selected" : null)">
                        Unpaid
                    </option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Teams (@Model.Teams.Count())</h2>
    <a asp-action="CreateTeam" class="btn btn-success">
        <i class="bi bi-plus-lg"></i> Add New Team
    </a>
</div>

@if (!Model.Teams.Any())
{
    <div class="alert alert-info">
        No teams found matching your criteria.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Team Name</th>
                    <th>Division</th>
                    <th>Players</th>
                    <th>Payment Status</th>
                    <th>Payment Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model.Teams)
                {
                    <tr>
                        <td>@team.TeamName</td>
                        <td>@team.Division.DivisionName</td>
                        <td>@team.Players.Count</td>
                        <td>
                            @if (team.RegistrationPaid)
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Unpaid</span>
                            }
                        </td>
                        <td>@team.PaymentDate?.ToString("MMM dd, yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="EditTeam" asp-route-id="@team.TeamId" class="btn btn-outline-primary">Edit</a>
                                <a asp-action="ManagePlayers" asp-route-teamId="@team.TeamId" class="btn btn-outline-info">Players</a>
                                @if (!team.RegistrationPaid)
                                {
                                    <form asp-action="MarkPaid" asp-route-id="@team.TeamId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-success">Mark Paid</button>
                                    </form>
                                }
                                <a asp-action="DeleteTeam" asp-route-id="@team.TeamId" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-4">
    <a asp-action="Summary" class="btn btn-info">View Registration Summary</a>
    <a asp-action="DivisionSummary" class="btn btn-info">Division Summary Report</a>
</div>