@model BowlingTournament_Project.ViewModels.TeamEditVm
@{
    ViewData["Title"] = "Edit Team";
}

<h1>Edit Team</h1>

<form asp-action="EditTeam" method="post" class="mt-3">
    <input type="hidden" asp-for="TeamId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Team Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TeamName" class="form-label"></label>
                        <input asp-for="TeamName" class="form-control" />
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DivisionId" class="form-label"></label>
                        <select asp-for="DivisionId" class="form-select">
                            <option value="">-- Select Division --</option>
                            @if (Model.Divisions != null)
                            {
                                @foreach (var division in Model.Divisions)
                                {
                                    <option value="@division.DivisionId"
                                            selected="@(Model.DivisionId == division.DivisionId ? "selected" : null)">
                                        @division.DivisionName
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DivisionId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RegistrationPaid" class="form-check-input" />
                        <label asp-for="RegistrationPaid" class="form-check-label">Registration Paid</label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        <small class="form-text text-muted">Leave empty if not paid</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update Team</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>