                                <label asp-for="Player1City" class="form-label"></label>
                                <input asp-for="Player1City" class="form-control" />
                                <span asp-validation-for="Player1City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Player1Province" class="form-label"></label>
                                <input asp-for="Player1Province" class="form-control" />
                                <span asp-validation-for="Player1Province" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
