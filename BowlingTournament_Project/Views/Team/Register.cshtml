@model BowlingTournament_Project.ViewModels.TeamRegisterVm
@{
    ViewData["Title"] = "Register Team";
}

<h1>Register Your Team</h1>
<p class="lead">Complete the form below to register your team of 4 players</p>

<form asp-action="Register" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Team Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TeamName" class="form-label"></label>
                        <input asp-for="TeamName" class="form-control" />
                        <span asp-validation-for="TeamName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="DivisionId" class="form-label"></label>
                        <select asp-for="DivisionId" class="form-select">
                            <option value="">-- Select Division --</option>
                            @if (Model.Divisions != null)
                            {
                                @foreach (var division in Model.Divisions)
                                {
                                    <option value="@division.DivisionId"
                                            selected="@(Model.DivisionId == division.DivisionId ? "selected" : null)">
                                        @division.DivisionName
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="DivisionId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Player 1 -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Player 1</h5>
                </div>
